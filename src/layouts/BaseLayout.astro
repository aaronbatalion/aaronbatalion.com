---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Aaron Batalion's personal site" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en-US">
<head>
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-32656445-1"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'UA-32656445-1');
  </script>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="author" content="Aaron Batalion" />
  <title>{title}</title>
  <link rel="canonical" href={Astro.url.href} />
  <link rel="stylesheet" href="/css/main.css" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="manifest" href="/manifest.json" />
</head>
<body lang="en">
  <slot />
</body>
</html>
